<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Plat Nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailPlatNo"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Plat Nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Nomor Karcis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailTiketNo"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Nomor Karcis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailTanggal"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Jam Masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailJamMasuk"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Jam Masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Jam Keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailJamKeluar"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Jam Keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="5dp"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:text="Durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detailDurasi"
                android:paddingLeft="5dp"
                android:textAlignment="textStart"
                android:layout_weight="0.5"
                android:text="Durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProsesKendaraanKeluar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="PROSES KELUAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>